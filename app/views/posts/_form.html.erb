<%= form_for @post do |f| %>

  <% if @post.errors.any? %>
  <div class="alert" id="error_explanation">
    <h2>
      <%= pluralize(@post.errors.count, "error") %> must be fixed:
    </h2>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.label :header_type %><br>
    <%= f.text_field :header_type %>
  </p>

  <p>
    <%= f.label :header_url %><br>
    <%= f.text_field :header_url %>
  </p>

  <p class="submit-button">
    <%= f.submit %>
  </p>
<% end %>
