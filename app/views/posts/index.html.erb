<div class="print-posts">
  <% @posts.reverse.each do |post| %>
    <div class="single-post post-bg" style="background-image: url(<%= post.header_url %>);">
      <h3 class="header-title single-post-title">
        <%= link_to post.title, post_path(post) %>
      </h3>
      <div class="single-post-byline">
        <a href="<%= user_path(post.user) %>">
          <div class="profile-pic mini-pic"  style="background-image: url(<%= post.user.photo_url %>);"></div>
        </a>
        <%= link_to post.user.username, user_path(post.user) %>
      </p>
    </div>
  </div>
  <% end %>
</div>
